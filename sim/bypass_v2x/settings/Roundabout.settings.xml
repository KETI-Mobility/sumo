<settings>
    <!-- General simulation settings -->
    <time>
        <begin value="0"/>
        <end value="2000"/>
        <step-length value="0.01"/>
    </time>

    <!-- GUI settings -->
    <gui-settings>
        <viewport>
            <center x="110" y="100" zoom="500"/>
        </viewport>
        <delay value="0"/>
        <edge-type>
            <show value="true"/>
            <show-junctions value="true"/>
        </edge-type>
        <label>
            <vehicle value="true"/>
            <edge-id value="true"/>
        </label>
        <scheme name="real world"/>
    </gui-settings>

    <!-- Output settings -->
    <output>
        <tripinfo-output value="tripinfo.xml"/>
        <emission-output value="emissions.xml"/>
    </output>

    <!-- Route settings -->
    <route>
        <remove-empty-edges value="true"/>
    </route>

    <!-- Traffic light settings -->
    <traffic-light>
        <program id="default">
            <offset value="0"/>
        </program>
    </traffic-light>

	<report>
		<verbose value="true"/>
		<log value="Roundabout.log"/>
		<log-level value="debug"/>
	</report>
</settings>
